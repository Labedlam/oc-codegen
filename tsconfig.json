{
  "compilerOptions": {
    "incremental": false,
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "target": "es5",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*",
    "cli.ts"
  ],
  "typedocOptions": {
    "mode": "file",
    "out": "docs",
    "name": "oc-codegen",
    "excludeExternals": true,
    "externalPattern": "",
    "excludePrivate": true,
    "excludeProtected": true,
    "theme": "docs-templates"
  }
}
